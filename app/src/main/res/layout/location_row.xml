<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/list_row_cityNameId"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="Istanbul" />

        <TextView
            android:id="@+id/list_row_tempId"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/list_row_cityNameId"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="56dp"
            android:text="17"
            android:textSize="18sp"
            android:gravity="top|center"/>

        <ImageView
            android:id="@+id/list_row_weatherImgId"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/list_row_tempId"
            android:layout_alignBottom="@+id/list_row_tempId"
            android:layout_marginEnd="13dp"
            android:src="@drawable/ic_mr_button_connecting_21_dark" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>